{
  "name": "@git-dash/db",
  "version": "0.0.1",
  "type": "module",
  "types": "./src/index.ts",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:generate:with-env": "DB_FILE_NAME=./sqlite/schema-check.db drizzle-kit generate",
    "db:migrate:with-env": "DB_FILE_NAME=./sqlite/schema-check.db drizzle-kit migrate",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "drizzle-orm": "0.39.3"
  },
  "devDependencies": {
    "@types/node": "22.13.1",
    "@tsconfig/strictest": "2.0.5",
    "drizzle-kit": "0.30.4",
    "typescript": "5.7.3",
    "tsup": "8.3.6"
  },
  "license": "https://github.com/ToyB0x/git-dash/blob/main/LICENSE"
}
