{
  "name": "@repo/api",
  "exports": {
    "./hc": {
      "import": {
        "default": "./dist/hc.js",
        "types": "./dist/hc.d.ts"
      }
    }
  },
  "scripts": {
    "dev": "pnpm --filter @repo/api --parallel \"/^dev:.*/\"",
    "dev:tsc": "tsc -p tsconfig.build.json --watch",
    "dev:wrangler": "FIREBASE_AUTH_EMULATOR_HOST='127.0.0.1:9099' wrangler dev --persist-to ../../.emu-cloudflare",
    "build": "tsc -p tsconfig.build.json",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/firebase-auth": "1.4.1",
    "@hono/valibot-validator": "0.5.1",
    "@repo/db-api": "workspace:*",
    "@repo/schema": "workspace:*",
    "drizzle-orm": "0.37.0",
    "hono": "4.6.13",
    "valibot": "1.0.0-beta.9"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20241205.0",
    "@tsconfig/strictest": "2.0.5",
    "wrangler": "3.93.0"
  }
}
