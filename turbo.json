{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "VITE_PUBLIC_FIREBASE_PROJECT_ID",
    "VITE_PUBLIC_FIREBASE_BROWSER_API_KEY",
    "VITE_PUBLIC_API_SERVER_URL"
  ],
  "tasks": {
    "generate": {
      "dependsOn": ["^generate"],
      "cache": false
    },
    "build": {
      "dependsOn": [
        "generate", // need prisma initialization
        "^build" //  need api type definitions build (web / jobs packages depend on api type build (^build run all build tasks of dependencies))
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        "dist/**", // tsup outputs
        "build/**" // remix outputs
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["generate"]
    },
    "typecheck": {
      "dependsOn": [
        "generate",
        "build" // need api type definitions build
      ]
    },
    "e2e:run": {
      "dependsOn": ["^e2e:run"]
    },
    "//#format-and-lint": {},
    "//#format-and-lint:fix": {
      "cache": false
    }
  }
}
