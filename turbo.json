{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "generate-db-job": {
      "dependsOn": ["^generate-db-job"],
      "cache": false
    },
    "build": {
      "dependsOn": ["generate-db-job"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        "dist/**", // tsup outputs
        "build/**" // remix outputs
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["generate-db-job"]
    },
    "typecheck": {
      "dependsOn": ["generate-db-job"]
    },
    "//#format-and-lint": {},
    "//#format-and-lint:fix": {
      "cache": false
    }
  }
}
