{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "generate:db": {
      "dependsOn": ["^generate:db"],
      "cache": false
    },
    "build": {
      "cache": false,
      "dependsOn": ["generate:db", "^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        "dist/**", // tsup outputs
        "build/**" // remix outputs
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["generate:db"]
    },
    "typecheck": {
      "dependsOn": [
        "generate:db",
        "build" // need api type definitions build
      ]
    },
    "//#format-and-lint": {},
    "//#format-and-lint:fix": {
      "cache": false
    }
  }
}
